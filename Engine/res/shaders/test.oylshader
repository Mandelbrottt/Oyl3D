#version 420

#if defined(TYPE_VERTEX)

    layout(location = 0) in vec3 in_position;

    void main()
    {
        gl_Position = vec4(in_position, 1.0);
    }

#elif defined(TYPE_FRAGMENT)

    layout(location = 0) out vec3 out_color;

    void main()
    {
        out_color = vec3(1.0, 1.0, 1.0);
        gl_Position = vec4(1.0);
    }

#endif